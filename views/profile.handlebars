{{!-- Header Image --}}
<img src="/assets/images/love-connect.png" class="img-fluid header-img" alt="...">

{{!-- Body of Profile --}}
<div class="container">
    <div class="card text-center cardProfile">
        <div class="card-header"></div>
        <div class="card-body"></div>
        <div id="profRow" class="row">
            <div class="col-12">
                <div>
                    <h2 id="member-name">{{username}}<span class="member-name"></span></h2>
                </div>

                {{!-- Edit Profile Button --}}
                <button id="editBtn" type="button" class="btn btn-outline-dark" data-bs-toggle="modal"
                    data-bs-target="#exampleModal"><i class="fa fa-pencil"></i></button>
            </div>
        </div>
        <div class="row">
            <div class="col-10">
                <img id="imgHolder" src="{{profPic}}" class="mx-auto d-block" alt="...">

                {{!-- Modal --}}
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Edit Profile</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                {{!-- Update Bio Feature --}}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Bio</span>
                                    <input id="newBio" type="text" class="form-control"
                                        aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                </div>
                                {{!-- Upload File Feature --}}
                                <div id="modalUpload" class="input-group mb-3">
                                    <input id="picUpload" type="file" class="form-control" id="inputGroupFile01">
                                </div>
                            </div>
                            {{!-- Check Boxes For Interests --}}
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Tech
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                <label class="form-check-label" for="flexCheckChecked">
                                    Sports
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Nature
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Travel
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Arts
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Food
                                </label>
                            </div>
                            {{!-- Buttons Within Modal --}}
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button data-id="{{id}}" id="saveBtn" type="submit" class="btn btn-primary">Save
                                    changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- Bio --}}
            <div class="row bio-block">
                <div class="col-8">
                    <div class="card">
                        <div class="card-header">Bio</div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p id="bioText">{{bio}}</p>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Interest Cards --}}
        <div id="cardRow" class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
            {{#each interests}}
            <div class="col">
                <div id="interests" class="card text-white bg-dark mb-3" style="max-width: 15rem;">
                    <div class="card-header">My Interests</div>
                    <div class="card-body">
                        <p class="card-text">{{name}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

